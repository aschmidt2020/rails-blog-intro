<% unless comment.archived? %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <p>
    <%= button_to "Delete", [comment.article, comment], method: :delete, confirm: "Are you sure?" %>
  </p>

<% end %>

